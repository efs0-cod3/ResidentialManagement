<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/overview.css" />
    <title>RM - Admin Dashboard</title>
  </head>
  <body>
    <nav>
      <div class="logo">
        <img class="rm" src="/images/rmnotext.png" alt="" />
      </div>
      <ul class="log-btns">
        <li><a href="/users/logout"><button class="nav-btn" id="Log-out">Logout</button></a></li>
      </ul>
    </nav>
    <main>
      <h1 class="welcome"> Welcome <%= name %> </h1>

      <table class="content-table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th class="status-container">Status</th>
            <th>View</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < reports.length; i++ ) { %>
            <tr>
            <td><%= reports[i].title %></td>
            <td><%= reports[i].reportContent.substring(0,7) + '...' %></td>
            <td class="status-container">
              <select id="select" class="status status-process">
              <option id="op1" value="processing">Processing</option>
              <option id="op2" value="solved">Solved</option>
            </select>
            </td>
            <td><button class="view">View</button></td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
    <script src="/js/admin.js"></script>
  </body>
</html>
